# Environment configuration for WeekendPlanner backend
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# PostgreSQL connection for Prisma
DATABASE_URL=postgresql://user:password@localhost:5432/weekendplanner?schema=public

# Redis connection
REDIS_URL=redis://localhost:6379/0

# Swagger
SWAGGER_TITLE=WeekendPlanner-API
SWAGGER_VERSION=0.1.0

# Events APIs
# Ticketmaster Discovery API
TICKETMASTER_API_KEY=

# PredictHQ Events API (use a Personal Access Token)
PREDICTHQ_TOKEN=

# Places APIs
# Geoapify Places API key
GEOAPIFY_API_KEY=
# Google Places Web Service API key
GOOGLE_PLACES_API_KEY=
# Foursquare Places API key (v3, use as Authorization header)
FOURSQUARE_API_KEY=

# Auth/JWT
# Use a strong random secret in production (at least 32 chars)
JWT_SECRET=dev-secret-change-me
# Access token lifetime (e.g., 15m, 1h)
JWT_EXPIRES_IN=15m
# Refresh token lifetime in days
JWT_REFRESH_EXPIRES_DAYS=30

# Ingest debug logging (diagnostics)
# Print detailed per-request ingest logs to console (true/false)
INGEST_DEBUG_TO_CONSOLE=false
# Write full log of the last ingest request to a file (true/false)
INGEST_DEBUG_FILE_LOG=false
# Path to the log file (overwritten every request when enabled)
INGEST_DEBUG_FILE_PATH=logs/ingest-debug.log
# Save provider sample responses (diagnostics)
# When true, saves the first item from each provider response into logs/response.<PROVIDER>.log
INGEST_SAVE_PROVIDER_SAMPLES=false
# Save provider RAW sample responses (unprocessed by our mappers)
# When true, saves the first raw item from each provider API response into logs/rawResponse.<PROVIDER>.log
INGEST_SAVE_PROVIDER_RAW_SAMPLES=false
INGEST_EVENT_QUALITY_BOOST=0.08
SEARCH_ONLY_WITH_PHOTOS=true