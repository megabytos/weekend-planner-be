{
  "name": "weekendplanner-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "test": "jest --passWithNoTests",
    "prisma:generate": "prisma generate",
    "migrate:dev": "prisma migrate dev --name init",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset --force",
    "prisma:studio": "prisma studio",
    "start:render": "npm run migrate:deploy && npm run start",
    "schema:push": "prisma db push",
    "seed:taxonomy": "npm run schema:push && npm run prisma:generate && tsx scripts/seed-taxonomy.ts",
    "seed:geo": "npm run schema:push && npm run prisma:generate && tsx scripts/seed-geo.ts",
    "seed:all": "npm run schema:push && npm run prisma:generate && npm run seed:taxonomy && npm run seed:geo"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/client": "^6.2.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.5",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "fastify-type-provider-zod": "^6.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.1.0",
    "prisma": "^5.22.0",
    "zod": "^4.0.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "devDependencies": {
    "pino-pretty": "^13.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
